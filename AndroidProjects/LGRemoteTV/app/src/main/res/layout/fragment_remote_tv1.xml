<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    android:columnCount="3"
    android:rowCount="9">

    <Button
        android:id="@+id/guideBttn"
        android:layout_width="110dp"
        android:layout_column="0"
        android:layout_margin="2dp"
        android:layout_row="0"
        android:background="#797980"
        android:padding="2dp"
        android:text="Guide"
        android:textColor="#FFFFFF" />

    <Button
        android:id="@+id/homeBttn"
        android:layout_width="wrap_content"
        android:layout_column="1"
        android:layout_gravity="fill_horizontal|center_horizontal"
        android:layout_margin="2dp"
        android:layout_row="0"
        android:background="#B0E0E6"
        android:gravity="center"
        android:maxWidth="110dp"
        android:padding="2dp"
        android:text="Home"
        android:textAlignment="center"
        android:textColor="#000000" />

    <Button
        android:id="@+id/menuBttn"
        android:layout_column="2"
        android:layout_margin="2dp"
        android:layout_row="0"
        android:background="#797980"
        android:minWidth="110dp"
        android:padding="2dp"
        android:text="Q.Menu"
        android:textColor="#FFFFFF" />

    <Button
        android:id="@+id/arrowUpBttn"
        android:layout_width="wrap_content"
        android:layout_column="0"
        android:layout_columnSpan="3"
        android:layout_gravity="fill_horizontal"
        android:layout_margin="2dp"
        android:layout_row="1"
        android:background="#797980"
        android:padding="2dp"
        android:text="▲"
        android:textColor="#FFFFFF" />

    <Button
        android:id="@+id/leftArrowBttn"
        android:layout_width="wrap_content"
        android:layout_column="0"
        android:layout_gravity="fill_horizontal"
        android:layout_margin="2dp"
        android:layout_row="2"
        android:background="#797980"
        android:padding="2dp"
        android:text="◀"
        android:textColor="#FFFFFF" />

    <Button
        android:id="@+id/okBttn"
        android:layout_width="wrap_content"
        android:layout_column="1"
        android:layout_gravity="fill_horizontal|center_horizontal"
        android:layout_margin="2dp"
        android:layout_row="2"
        android:background="#797980"
        android:padding="2dp"
        android:text="Ok"
        android:textColor="#FFFFFF" />

    <Button
        android:id="@+id/rightArrowBttn"
        android:layout_width="wrap_content"
        android:layout_column="2"
        android:layout_gravity="fill_horizontal"
        android:layout_margin="2dp"
        android:layout_row="2"
        android:background="#797980"
        android:gravity="center"
        android:padding="2dp"
        android:text="▶"
        android:textColor="#FFFFFF" />

    <Button
        android:id="@+id/downArrowBttn"
        android:layout_width="wrap_content"
        android:layout_column="0"
        android:layout_columnSpan="3"
        android:layout_gravity="fill_horizontal"
        android:layout_margin="2dp"
        android:layout_row="3"
        android:background="#797980"
        android:padding="2dp"
        android:text="▼"
        android:textColor="#FFFFFF" />

    <Button
        android:id="@+id/backBttn"
        android:layout_width="wrap_content"
        android:layout_column="0"
        android:layout_gravity="fill_horizontal"
        android:layout_margin="2dp"
        android:layout_row="4"
        android:background="#797980"
        android:padding="2dp"
        android:text="Back"
        android:textColor="#FFFFFF" />

    <Button
        android:id="@+id/infoBttn"
        android:layout_width="wrap_content"
        android:layout_column="1"
        android:layout_gravity="fill_horizontal|center_horizontal"
        android:layout_margin="2dp"
        android:layout_row="4"
        android:background="#797980"
        android:padding="2dp"
        android:text="Info Ⓘ"
        android:textColor="#FFFFFF" />

    <Button
        android:id="@+id/exitBttn"
        android:layout_width="wrap_content"
        android:layout_column="2"
        android:layout_gravity="fill_horizontal"
        android:layout_margin="2dp"
        android:layout_row="4"
        android:background="#797980"
        android:gravity="center"
        android:padding="2dp"
        android:text="Exit"
        android:textColor="#FFFFFF" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_columnSpan="3"
        android:layout_gravity="fill_horizontal"
        android:baselineAligned="false"

        android:gravity="fill_horizontal">

        <Button
            android:id="@+id/redBttn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center|fill"
            android:layout_margin="2dp"
            android:background="#FF0000" />

        <Button
            android:id="@+id/greenBttn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center|fill"
            android:layout_margin="2dp"
            android:background="#008000" />

        <Button
            android:id="@+id/yellowBttn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="fill|center"
            android:layout_margin="2dp"
            android:background="#ffff00" />

        <Button
            android:id="@+id/blueBttn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="fill|center"
            android:layout_margin="2dp"
            android:layout_weight="1.02"
            android:background="#0000cc" />

    </LinearLayout>

    <Button
        android:id="@+id/teletxtBttn"
        android:layout_width="wrap_content"
        android:layout_column="0"
        android:layout_gravity="fill_horizontal"
        android:layout_margin="2dp"
        android:layout_row="6"
        android:background="#797980"
        android:padding="2dp"
        android:text="❒ text"
        android:textColor="#FFFFFF" />

    <Button
        android:id="@+id/tOptBttn"
        android:layout_width="wrap_content"
        android:layout_column="1"
        android:layout_gravity="fill_horizontal|center_horizontal"
        android:layout_margin="2dp"
        android:layout_row="6"
        android:background="#797980"
        android:padding="2dp"
        android:text="T. Opt"
        android:textColor="#FFFFFF" />

    <Button
        android:id="@+id/subtitleBttn"
        android:layout_width="wrap_content"
        android:layout_column="2"
        android:layout_gravity="fill_horizontal"
        android:layout_margin="2dp"
        android:layout_row="6"
        android:background="#797980"
        android:gravity="center"
        android:padding="2dp"
        android:text="subtitle"
        android:textColor="#FFFFFF" />

    <Button
        android:id="@+id/stopBttn"
        android:layout_width="wrap_content"
        android:layout_column="0"
        android:layout_gravity="fill_horizontal"
        android:layout_margin="2dp"
        android:layout_row="7"
        android:background="#797980"
        android:padding="2dp"
        android:text="❒"
        android:textColor="#FFFFFF" />

    <Button
        android:id="@+id/playBttn"
        android:layout_width="wrap_content"
        android:layout_column="1"
        android:layout_gravity="fill_horizontal|center_horizontal"
        android:layout_margin="2dp"
        android:layout_row="7"
        android:background="#797980"
        android:padding="2dp"
        android:text="➤"
        android:textColor="#FFFFFF" />

    <Button
        android:id="@+id/pauseBttn"
        android:layout_width="wrap_content"
        android:layout_column="2"
        android:layout_gravity="fill_horizontal"
        android:layout_margin="2dp"
        android:layout_row="7"
        android:background="#797980"
        android:gravity="center"
        android:padding="2dp"
        android:text="❚❚"
        android:textColor="#FFFFFF" />

    <Button
        android:id="@+id/rewBttn"
        android:layout_width="wrap_content"
        android:layout_column="0"
        android:layout_gravity="fill_horizontal"
        android:layout_margin="2dp"
        android:layout_row="8"
        android:background="#797980"
        android:padding="2dp"
        android:text="◀◀"
        android:textColor="#FFFFFF" />

    <Button
        android:id="@+id/fwBttn"
        android:layout_width="wrap_content"
        android:layout_column="1"
        android:layout_gravity="fill_horizontal|center_horizontal"
        android:layout_margin="2dp"
        android:layout_row="8"
        android:background="#797980"
        android:padding="2dp"
        android:text="▶▶"
        android:textColor="#FFFFFF" />

    <Button
        android:id="@+id/adBttn"
        android:layout_width="wrap_content"
        android:layout_column="2"
        android:layout_gravity="fill_horizontal"
        android:layout_margin="2dp"
        android:layout_row="8"
        android:background="#797980"
        android:gravity="center"
        android:padding="2dp"
        android:text="AD"
        android:textColor="#FFFFFF" />
</GridLayout>
